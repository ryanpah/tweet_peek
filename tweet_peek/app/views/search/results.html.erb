<div class="search_box_results">
  <div class="user_information_box">
    <%= render 'favorite' %>
    <h1><%= @name %></h1>

      </br>
      <h2><b>Description:</b> <%= @description %>  </h2>
      <h2><b>Followers:   </b> <%= @followers %>     </h2>
      <h2><b>Following:   </b> <%= @following %>    </h2>
      </br>

      <h1>Results</h1>
        <div class="results">
                <table class="table">
                  <thead>
                    <tr>
                      <th> Word </th>
                      <th> Frequency </th>
                    </tr>
                  </thead>
                    <tbody>
                        <% @tweet_text_hash.each do |word, count|  %>
                          <tr>
                            <td><%= word.capitalize %></td>
                            <td><%= count %>              </td>
                          </tr>
                        <% end %>
                    </tbody>

                <table class="table">
                  <thead>
                    <tr>
                      <th> @username & Frequency </th>
                    </tr>
                  </thead>
                    <tbody>
                            <% @tweet_ats.each do |tweet_ats_and_count| %>
                              <% tweet_ats_and_count.each_slice(2) do |tweet_at_and_count| %>
                          <tr>
                              <td><%= tweet_at_and_count[0] %> => <%= tweet_at_and_count[1] %></td>
                          </tr>
                          <% end %>
                            <% end %>
                    </tbody>
              </div>
                <table class="table">
                  <thead>
                    <tr>
                      <th> Hashtag & Frequency </th>
                    </tr>
                  </thead>
                    <tbody>
                        <% @hashtags.each do |hashtags_and_count| %>
                        <tr>
                          <td><%= hashtags_and_count[0] %> => <%= hashtags_and_count[1] %></td>
                        </tr>
                        <% end %>
                    </tbody>
        </div>
  </div>
</div>