<div class="span6">
    <h1>Sign in:</h1>

    <p>
                             <%= form_for("user", :url => user_session_path) do |f| %></p>
    <p>Email:         <%= f.text_field :email %></p>
    <p>Password:   <%= f.password_field :password %>
    </p>
    <p>                   <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
    </p>
    <p>                   <%= link_to "Sign in with Twitter", user_omniauth_authorize_path(:twitter), class:"btn btn-info" %></p>
    <p>                   <%= f.submit 'Sign in', class:"btn btn-primary" %></p>
    <p>                   <%= link_to 'Sign up', new_user_registration_path %>
    <p>                   <%= link_to "Forgot your password?", new_password_path('user') %>
    </p>

                              <% end %>

</div>